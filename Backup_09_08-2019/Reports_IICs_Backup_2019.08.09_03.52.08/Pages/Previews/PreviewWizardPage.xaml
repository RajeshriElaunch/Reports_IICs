<UserControl x:Class="Reports_IICs.Pages.Previews.PreviewWizardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Reports_IICs.Pages.Previews"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="labelTitulo"  Content="Label" Grid.RowSpan="2" VerticalAlignment="Top" Margin="0,5" HorizontalAlignment="Center" FontWeight="Bold"/>
        <ScrollViewer Grid.Row="1" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" Margin="0,36,0.4,0" >
            <StackPanel x:Name="MyStackPanelVertical"  HorizontalAlignment="Center" >

            </StackPanel>

        </ScrollViewer>

    </Grid>
</UserControl>
