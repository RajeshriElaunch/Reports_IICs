<UserControl x:Class="Reports_IICs.Pages.Previews.ParticipesSalat.EditableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reports_IICs.Pages.Previews.ParticipesSalat"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="27" d:DesignWidth="145">
    <Grid>
        <TextBox x:Name="Txt_Texto" Height="23" TextWrapping="Wrap" Text="{Binding ElementName=root, Path=Text}" VerticalAlignment="Top" Margin="18,0,-0.2,0" TextChanged="Txt_Texto_TextChanged" />
        <Image x:Name="IMG_Pencil" HorizontalAlignment="Left" Height="19" VerticalAlignment="Top" Width="15" Source="/Reports_IICs;component/Images/editar.ico" Margin="2,3,0,0" MouseLeftButtonDown="IMG_Pencil_MouseLeftButtonDown"/>

    </Grid>
</UserControl>
